<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Friend_Activity"
    android:background="@color/blue">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar" />

    <RelativeLayout
        android:id="@+id/showAllUsers"
        android:layout_width="349dp"
        android:layout_height="65dp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="31dp"
        android:layout_marginEnd="31dp"
        android:background="@drawable/outline"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar">

        <TextView
            android:id="@+id/titleFriends"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:layout_marginLeft="47dp"
            android:layout_marginTop="-5dp"
            android:text="Add Friends"
            android:textColor="@color/black"
            android:textSize="22dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="47dp"
            android:layout_marginTop="20dp"
            android:text="Find new friends to connect with"
            android:textColor="#808080"
            android:textStyle="bold"
            android:visibility="visible" />


        <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="300dp"
            android:scaleType="center"
            android:src="@drawable/arrow"
            app:tint="@color/black" />

        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="1dp"
            android:background="@drawable/outline"
            android:backgroundTint="@color/log_blue" />

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="6dp"
            android:src="@drawable/allusers"

            app:tint="@color/white" />


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/showRequests"
        android:layout_width="349dp"
        android:layout_height="65dp"
        android:layout_marginStart="31dp"
        android:layout_marginEnd="31dp"
        android:background="@drawable/outline"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="10dp"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/showAllUsers">

        <TextView
            android:id="@+id/titleRequest"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginLeft="47dp"
            android:layout_marginTop="-5dp"
            android:text="Friend Requests"
            android:textColor="@color/black"
            android:textSize="22dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="47dp"
            android:layout_marginTop="20dp"
            android:text="Decide who can be friends with you"
            android:textColor="#808080"
            android:textStyle="bold"
            android:visibility="visible" />


        <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="300dp"
            android:scaleType="center"
            android:src="@drawable/arrow"
            app:tint="@color/black" />

        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="1dp"
            android:background="@drawable/outline"
            android:backgroundTint="@color/log_blue" />

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            android:src="@drawable/friendrequest"

            app:tint="@color/white" />


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/currentFriends"
        android:layout_width="349dp"
        android:layout_height="65dp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="31dp"
        android:layout_marginEnd="31dp"
        android:background="@drawable/outline"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/showRequests">

        <TextView
            android:id="@+id/titleFriendsCurrent"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginLeft="47dp"
            android:layout_marginTop="-5dp"
            android:text="Current Friends"
            android:textColor="@color/black"
            android:textSize="22dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="47dp"
            android:layout_marginTop="20dp"
            android:text="See all your current friends"
            android:textColor="#808080"
            android:textStyle="bold"
            android:visibility="visible" />


        <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="300dp"
            android:scaleType="center"
            android:src="@drawable/arrow"
            app:tint="@color/black" />

        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="1dp"
            android:background="@drawable/outline"
            android:backgroundTint="@color/log_blue" />

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="6dp"
            android:src="@drawable/currentfriend"

            app:tint="@color/white" />


    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
